<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/gender_league_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Men"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/team_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eagles"
            android:textAlignment="center"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/team_region_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gulf Coast"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.mikephil.charting.charts.PieChart
                android:layout_centerHorizontal="true"
                android:id="@+id/team_wins_piechart"
                android:layout_width="250dp"
                android:layout_height="250dp">
            </com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_games_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_players_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
